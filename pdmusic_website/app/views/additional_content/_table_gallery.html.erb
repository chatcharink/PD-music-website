<!-- Button trigger modal -->
<button type="button" class="btn btn-primary float-end mx-5 my-3" data-bs-toggle="modal" data-bs-target="#addGallery">+ Add Gallery</button>

<div data-controller="gallery">
    <div class="div_menu_table table-responsive w-100 m-auto my-3 p-3">
        <%= content_tag :table, class: "table table-hover", id: "table-gallery-list", width: "100%", data: { url: additional_datatable_path(format: :json, menu: params["menu"])} do %>
            <thead>
                <tr>
                    <th width="50%">Cover image</th>
                    <th width="30%">Status</th>
                    <th class="text-center" width="20%">Action</th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        <% end %>
    </div>

    <div class="show-dialog">
        <%= render partial: "additional_content/gallery_dialog", locals: { menu: params["menu"], content: @content, gallery: [] } %>
    </div>
</div>