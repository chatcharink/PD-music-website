<% is_user_logged_in? %>

<div class="h-100" data-controller="activity-log">
    <h5 class="m-3 w-100">Activity logs</h5>
    <div class="m-auto table-responsive" style="width: 95%">
        <%= content_tag :table, class: "table table-hover", id: "table-activity-list", width: "100%", data: { url: activity_log_datatable_path(format: :json)} do %>
            <thead>
                <tr>
                    <th width="20%">Name</th>
                    <th width="20%">Device</th>
                    <th width="10%">Action</th>
                    <th width="10%">Result</th>
                    <th width="25%">Detail</th>
                    <th width="15%">Date time</th>
                </tr>
            </thead>
            <tbody>
            
            </tbody>
        <% end %>
    </div>
</div>