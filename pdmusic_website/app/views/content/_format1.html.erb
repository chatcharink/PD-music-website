<div class="d-block">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary mb-3 me-3" data-bs-toggle="modal" data-bs-target="#addContent" style="float: right" data-action="click->content#clearContent">+ Add content</button>
    <button type="button" class="btn btn-primary mb-3 me-3" data-bs-toggle="modal" data-bs-target="#addAdditionalContent" style="float: right" data-action="click->content#clearAdditionalContent">+ Add additional content</button>

    <div class="m-auto mb-3 p-3 table-responsive w-100">
        <table class="table table-hover w-100">
            <thead>
                <tr>
                    <th width="30%">Image</th>
                    <th width="40%">Content</th>
                    <th class="text-center" width="15%">Status</th>
                    <th class="text-center" width="15%">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if @content.blank? %>
                    <tr>
                        <td colspan="4" class="text-center">No content available</td>
                    </tr>
                <% else %>
                    <% @content.each do |c| %>
                    <tr>
                        <td class="align-content-center">
                            <% if c.additional_content_id.blank? %>
                                <% image = c.image %>
                            <% else %>
                                <% image = @additional_content[c.additional_content_id]["image"].blank? ? c.image : @additional_content[c.additional_content_id]["image"] %>
                            <% end %>
                            <% source = image.attached? ? url_for(image) : "" %>
                            <div class="div-image-table" style="width: 300px; overflow: hidden">
                                <img id="image-content-table" class="w-100" src="<%= source %>"/>
                            </div>
                        </td>
                        <td class="align-content-center">
                            <% if c.additional_content_id.blank? %>
                                <h5 class="mb-3"><b><%= c.title_content %></b></h5>
                                <div class="mb-3"><%= c.content %></div>
                                <% if c.table.present? %>
                                    <% json_table = JSON.parse(c.table.to_json) %>
                                    <h5 class="mb-3"><b><%= json_table["title"] %></b></h5>
                                    <% if json_table["row1"].present? %>
                                        <span><i>Table content</i><span>
                                    <% end %>
                                <% end %>
                            <% else %>
                                <h5 class="mb-3"><b><%= c.title_content %></b></h5>
                                <span><i><%= @additional_content[c.additional_content_id]["menu"].capitalize %></i><span>
                            <% end %>
                        </td>
                        <td class="text-center align-content-center">
                            <span class="badge rounded-pill status-<%= c.status %>"><%= c.status.capitalize %></span>
                        </td>
                        <td class="text-center align-content-center">
                            <%# <div class="d-inline mx-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-up me-2" viewBox="0 0 16 16" data-bs-toggle="modal" data-bs-target="#confirmPublicDialog">
                                    <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z"/>
                                    <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z"/>
                                </svg>
                            </div> %>
                            <% if c.additional_content_id.blank? %>
                                <div class="d-inline mx-2">
                                    <button type="button" class="btn btn-primary d-none" id="edit-content-btn" data-bs-toggle="modal" data-bs-target="#addContent">Update content</button>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill icon" viewBox="0 0 16 16" data-action="click->content#editContent" data-content-url-param="<%= get_content_path(id: c.id, menu: params["menu"], cover_id: params["cover_id"], additional: false) %>" data-content-additional-param="false">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                                    </svg>
                                </div>
                            <% else %>
                                <div class="d-inline mx-2">
                                    <button type="button" class="btn btn-primary d-none" id="edit-additional-content-btn" data-bs-toggle="modal" data-bs-target="#addAdditionalContent">Update content</button>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill icon" viewBox="0 0 16 16" data-action="click->content#editContent" data-content-url-param="<%= get_content_path(id: c.id, menu: params["menu"], cover_id: params["cover_id"], additional: true) %>" data-content-additional-param="true">
                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                                    </svg>
                                </div>
                            <% end %>
                            <div class="d-inline mx-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill icon" viewBox="0 0 16 16" data-action="click->content#confirmDeleteDialog" data-content-url-param="<%= content_path(menu: params["menu"], cover_id: params["cover_id"]) %>" data-content-id-param="<%= c.id %>" data-content-content-name-param="content" data-bs-toggle="modal" data-bs-target="#confirmDeleteDialog">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                </svg>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div class="add-content-dialog">
    <%= render partial: "content/add_content", locals: {menu: params[:menu], cover: params[:cover_id]} %>
</div>

<div class="add-additional-content-dialog">
    <%= render partial: "content/add_additional_content", locals: {menu: params[:menu], cover: params[:cover_id]} %>
</div>