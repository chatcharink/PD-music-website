<%= form_for :banner, url: upload_banner_path(format: :json, menu: params["menu"], cover_id: params["cover_id"]), method: :POST, class: "form-upload-banner" do |f| %>
    <label class="upload-banner py-5 w-100 mb-3" id="upload-banner" for="upload-banner-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z"/>
            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z"/>
        </svg>
        <span>Click to upload banner (limit 5 image)</span>
    </label>
    <% unless @banner.blank? %>
        <div class="row w-100 mb-3">
            <div class="col-6"><span><b>Banner Image</b></span></div>
            <div class="col-3 text-center"><span><b>Status</b></span></div>
            <div class="col-3 text-center"><span><b>Action</b></span></div>
        </div>
        <% @banner.each_with_index do |img, index| %>
            <div class="row w-100 mb-3 row-banner-image">
                <div class="col-6 show-image-banner" id="div-image-list-<%= index+1 %>">
                    <% source = img.banner_image.attached? ? url_for(img.banner_image) : "" %>
                    <img id="image-banner-<%= index+1 %>" src="<%= source %>" class="w-100" style="object-fit: cover;"/>
                </div>
                <div class="col-3 text-center align-content-center">
                    <span class="badge rounded-pill status-<%= img.status %>"><%= img.status.capitalize %></span>
                </div>
                <div class="col-3 text-center align-content-center">
                    <% if img.status != "pre_delete" %>
                        <button type="button" class="btn btn-primary-delete" data-action="click->banner#confirmDeleteDialog" data-banner-url-param=<%= upload_banner_path(menu: params["menu"], cover_id: params["cover_id"]) %> data-banner-id-param=<%= img.id %> data-bs-toggle="modal" data-bs-target="#confirmDeleteDialog">Delete banner</button>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>
    <%= f.file_field "banner", accept: ".png, .jpg, .jpeg", data: { action: "change->banner#uploadPicture" }, class: "upload-banner-btn", id: "upload-banner-btn", disabled: @banner.length >= 5 %>
<% end %>