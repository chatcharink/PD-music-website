<div class="div_menu_table table-responsive w-100 m-auto my-3 p-3">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMenu" style="float: right" data-action="click->menu#clearMenu">+ Add menu</button>
    <%= content_tag :table, class: "table table-hover", id: "table-menu-list", width: "100%", data: { url: navigator_datatable_path(format: :json) } do %>
        <thead>
            <tr>
                <th width="45%">Menu name</th>
                <th width="10%">Header</th>
                <th width="10%">Footer</th>
                <th width="15%">Status</th>
                <th class="text-center" width="20%">Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    <% end %>

    <div class="show-dialog-menu">
        <%= render partial: "navigator_bar/add_menu" %>
    </div>
</div>